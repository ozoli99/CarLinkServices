@model IEnumerable<CarService>
@{
    ViewData["Title"] = "CarLinkServices";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="container mt-5">
        <div class="text-center mb-4">
            <h1>@ViewData["Title"]</h1>
            <h3>A legjobb szerviz, csak egy kattintásra!</h3>
        </div>
        <div class="row">
            <div class="col-md-4">
                <h3>Keresés városok szerint</h3>
                @if (ViewBag.Cities == null || ViewBag.Cities.Length == 0)
                {
                    <span>Nincs regisztrált szervíz.</span>
                }
                else
                {
                    <ul class="list-group">
                        @foreach (City city in ViewBag.Cities)
                        {
                            <li class="list-group-item"><a asp-controller="Home" asp-action="List" asp-route-cityId="@city.Id">@city.Name</a></li>
                        }
                    </ul>
                }
            </div>
            <div class="col-md-8">
                @if (Model == null || Model.Count() == 0)
                {
                    <div class="alert alert-info">Jelenleg nincs elérhető szerviz.</div>
                }
                else
                {
                    foreach (CarService carService in Model)
                    {
                        <div class="card mb-3">
                            <div class="card-header">
                                <a asp-controller="Home" asp-action="Details" asp-route-carServiceId="@carService.Id">@carService.Name</a>
                            </div>
                            <div class="card-body">
                                <strong>Város: </strong>@carService.City.Name
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>