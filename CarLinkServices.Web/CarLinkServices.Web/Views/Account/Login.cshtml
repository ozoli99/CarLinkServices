@using CarLinkServices.Web.Models;

@model LoginViewModel
<div class="login-container">
    <form asp-controller="Account" asp-action="Login" class="login-form">
        <h2 class="mb-4">Bejelentkezési adatok</h2>
        <div class="text-danger mb-3">
            <div class="failureNotification">@ViewBag.Information</div>
            <div asp-validation-summary="ModelOnly" class="failureNotification"></div>
        </div>
        <div class="form-group mb-3">
            <label for="UserName">Felhasználónév</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label for="UserPassword">Jelszó</label>
            <input asp-for="UserPassword" type="password" class="form-control" />
            <span asp-validation-for="UserPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Bejelentkezés</button>
    </form>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}